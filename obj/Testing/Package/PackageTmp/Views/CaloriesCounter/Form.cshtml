@using Calories_Life_2.Models;
@model Calories_Life_2.ViewModels.CaloriesCounterViewModel
@{
    ViewBag.Title = "CPM-form";
}

<main>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-auto align-items-center">
                <section id="loginForm" class="site-border">
                    @using (Html.BeginForm("Form", "CaloriesCounter", FormMethod.Post))
                    {
                        <div>
                            @Html.ValidationSummary("", new { @class = "text-danger text-center" })
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.AntiForgeryToken()
                                <div>

                                    @Html.LabelFor(m => m.CaloriesCounter.GenderChoose, new { @class = "font-weight-bold" })
                                </div>
                                <div class="form-check">
                                    @Html.RadioButtonFor(m => m.CaloriesCounter.GenderChoose, CaloriesCounter.Gender.Man,
                                        new { @class = "form-check-label", id = "Man" })
                                    @Html.Label("Man", new { @class = "form-check-label" })
                                </div>
                                <div class="form-check woman-radio">
                                    @Html.RadioButtonFor(m => m.CaloriesCounter.GenderChoose, CaloriesCounter.Gender.Woman,
                                        new { @class = "form-check-input ml-0", id = "Woman" })
                                    @Html.Label("Woman", new { @class = "form-check-label pl-3" })
                                </div>
                                @Html.ValidationMessageFor(m => m.CaloriesCounter.GenderChoose, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.CaloriesCounter.Age, new { @class = "font-weight-bold" })
                                @Html.TextBoxFor(m => m.CaloriesCounter.Age, new { @class = "form-control", placeholder = "Enter age" })
                                @Html.ValidationMessageFor(m => m.CaloriesCounter.Age, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.CaloriesCounter.Height, new { @class = "font-weight-bold" })
                                @Html.TextBoxFor(m => m.CaloriesCounter.Height, new { @class = "form-control", placeholder = "Enter height" })
                                @Html.ValidationMessageFor(m => m.CaloriesCounter.Height, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.CaloriesCounter.Weight, new { @class = "font-weight-bold" })
                                @Html.TextBoxFor(m => m.CaloriesCounter.Weight, new { @class = "form-control", placeholder = "Enter weight" })
                                @Html.ValidationMessageFor(m => m.CaloriesCounter.Weight, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.CaloriesCounter.Active, new { @class = "font-weight-bold" })
                            <div class="form-check">
                                @Html.RadioButtonFor(m => m.CaloriesCounter.Active, CaloriesCounter.Activity.Active_not,
                                    new { @class = "form-check-input", id = "Active_not" })
                                @Html.Label("Active_not", "Sick Person: Spend most of the day in bed.",
                                    new { @class = "form-check-label" })
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(m => m.CaloriesCounter.Active, CaloriesCounter.Activity.Active_light,
                                    new { @class = "form-check-input", id = "Active_light" })
                                @Html.Label("Active_light", "Sedentary: Spend most of the day sitting, light or none exercises (e.g. driver, desk job).",
                                    new { @class = "form-check-label" })
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(m => m.CaloriesCounter.Active, CaloriesCounter.Activity.Active_average,
                                    new { @class = "form-check-input", id = "Active_average" })
                                @Html.Label("Active_average", "Average Active: Spend a good part of the day on your feet, 1-3 exercises per week (e.g. student, teacher).",
                                    new { @class = "form-check-label" })
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(m => m.CaloriesCounter.Active, CaloriesCounter.Activity.Active,
                                    new { @class = "form-check-input", id = "Active" })
                                @Html.Label("Active", "Active: Spend most of the day doing physical activity, 3-5 exercises per week (e.g. food servant, bike delivery).",
                                    new { @class = "form-check-label" })
                            </div>

                            <div class="form-check">
                                @Html.RadioButtonFor(m => m.CaloriesCounter.Active, CaloriesCounter.Activity.Active_big,
                                   new { @class = "form-check-input", id = "Active_big" })
                                @Html.Label("Active_big", "Very Active: Spend most of the day doing heavy physical activity, 3-7 exercises per week  (e.g. construction worker, woodcutter).",
                                    new { @class = "form-check-label" })
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(m => m.CaloriesCounter.Active, CaloriesCounter.Activity.Active_huge,
                                new { @class = "form-check-input", id = "Active_huge" })
                                @Html.Label("Active_huge", "Athlete: Spend most of the day doing athletic activity (e.g. boxer, runner).",
                                    new { @class = "form-check-label" })
                            </div>
                            @Html.ValidationMessageFor(m => m.CaloriesCounter.Active, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.CaloriesCounter.Choice, new { @class = "font-weight-bold" })
                            @Html.EnumDropDownListFor(
                                                     m => m.CaloriesCounter.Choice,
                                                     "Select your goal",
                                                     new { @class = "form-control", @selected = "Select your goal" })
                            @Html.ValidationMessageFor(m => m.CaloriesCounter.Choice, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn site-button" value="Register">Submit</button>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</main>
@section ScriptsBottom {
    @Scripts.Render("~/bundles/jqueryval")
}