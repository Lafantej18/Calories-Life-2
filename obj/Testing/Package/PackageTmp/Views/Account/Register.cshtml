@model Calories_Life_2.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
} 

<main>
    <div class="container pt-5 mt-5">
        <div class="row justify-content-center">
            <div class="col-auto">
                <section id="loginForm" class="site-border">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {

                        @Html.AntiForgeryToken()
                        <h2 style="color:#5e594a;">Create a new account</h2>
                        <hr />
                        @Html.ValidationMessage("loginerror", "")
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control align-items-center", placeholder = "Enter Email" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control align-items-center", placeholder = "Password" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control align-items-center", placeholder = "Confirm Password" })
                        </div>

                        <hr />
                        <div class="text-center">
                            <button type="submit" class="btn site-button" value="Register">Sign Up</button>
                        </div>
                    }

                    <div class="form-group text-center">
                        @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
                        {
                            @Html.AntiForgeryToken();
                            <div class="row pt-2">
                                <button type="submit" id="FacebookLoginButton" name="provider" class="btn d-inline-block" title="Log in using your Facebook"
                                        value="Facebook"></button>
                                <button type="submit" id="GoogleLoginButton" name="provider" class="btn d-inline-block" title="Log in using your Google"
                                        value="Google"></button>
                            </div>

                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</main>
@section ScriptsBottom {
    @Scripts.Render("~/bundles/jqueryval")
}
